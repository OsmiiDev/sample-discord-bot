{
  "include": ["./src", "test.js"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "lib": ["ES2022"],
    "outDir": "./build",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "checkJs": true,
    "allowJs": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "sourceRoot": "src",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
    }
  }
}
